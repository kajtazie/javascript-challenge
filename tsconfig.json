{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"]  ,
    "outDir": "./dist" 
  },
  "include": ["src/**/*","jest.setup.ts"],
  "exclude": ["node_modules"]
}
